FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      flux6;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -2 -1 0 0 0 0];

internalField   uniform 1e+13;

boundaryField
{
    "(top|bottom|internal|external)"
    {
        type            albedo;
        beta            uniform 0.0;
        value           $internalField;
    }

    #include "common"
}


