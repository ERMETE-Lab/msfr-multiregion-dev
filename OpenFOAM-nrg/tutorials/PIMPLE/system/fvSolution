FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p.*"
    {
        solver          GAMG;
        smoother        DIC;

        tolerance       1e-7;
        relTol          1e-2;
        maxIter         100; 
    }

    "p.*Final"
    {
        $p_rgh;
        relTol          0;
    }

    "(U|k|epsilon|omega|R)"
    {
        solver          GAMG;
        smoother        GaussSeidel;

        tolerance       1e-6;
        relTol          1e-1;
        maxIter         100; 
    }

    "(U|k|epsilon|omega|R)Final"
    {
        $U;
        relTol          0;
    }

    T
    {
        solver PBiCG;
        preconditioner DILU;

        tolerance       1e-7;
        relTol          1e-2;
        maxIter         100;
    }

    TFinal
    {
        $T;
        relTol          0;
    }

    "flux.*"
    {
        solver          GAMG;
        smoother        DIC;
        
        tolerance       1e-8;
        relTol          1e-2;
        maxIter         100;
    }

    "flux.*Final"
    {
        $flux1;
        relTol          0;
    }

    "(prec|dec).*"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        
        tolerance       1e-6;
        relTol          1e-1;
        maxIter         100; 
    }

    "(prec.*|dec.*)Final"
    {
        $prec1;
        relTol          0;
    }
}



NPIMPLE
{
    nOuterCorrectors    1000;

    outerCorrectorResidualControl
    {
        "flux.*"
        {
            relTol          0;
            tolerance       1e-5;
        }
        "(prec|dec).*"
        {
            relTol          0;
            tolerance       1e-4;
        }
    }
}

PIMPLE
{
    momentumPredictor   yes;
    nOuterCorrectors    1000;
    nCorrectors         2;
    nNonOrthogonalCorrectors 0;
    consistent yes;
    turbOnFinalIterOnly no;

    pRefCell        0;
    pRefValue       0;

    outerCorrectorResidualControl
    {
        "p.*"
        {
            relTol          0;
            tolerance       1e-3;
        }
        "(U|k|epsilon)"
        {
            relTol          0;
            tolerance       2e-3;
        }
        T
        {
            relTol          0;
            tolerance       1e-3;
        }

        :NPIMPLE.outerCorrectorResidualControl;
    }
}

OUTPIMPLE
{
    nOuterCorrectors    5;

    outerCorrectorResidualControl
    {
        ".*"
        {
            relTol          0;
            tolerance       1e-9;
        }
    }
}


relaxationFactors
{
    fields
    {
        "p.*"               1;
    }
    equations
    {
        T                   1;
        "(U|k|epsilon)"     0.8;
        "flux.*"            1;
        "(prec|dec|fp).*"   1;
    }
}


